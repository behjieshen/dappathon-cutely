doctype html
head

  include ./reusables.jade
  script(type="text/javascript").
    $(document).ready(function() {
      $('.close-button').click(function() {
        $('.content-background').css('display', 'none');
      })
      
      $('#lilly').click(function(event) {
        $('#lilly-content').css('display', 'block');
      })
      
      $('#rachel').click(function(event) {
        $('#rachel-content').css('display', 'block');
      })
      
      $('#ailing').click(function(event) {
        $('#ailing-content').css('display', 'block');
      })
      
      $('#josephine').click(function(event) {
        $('#josephine-content').css('display', 'block');
      })
      
      $('.like-button').click(function() {
        var imageUrl = $(this).siblings('img').attr('src');
        console.log(imageUrl);
        $('.input-hidden').val(imageUrl);
        $('.goToMatching').submit();
      })
    })
    


body(style="background: white; width: 90%;")
  main
    form.goToMatching(method="post" action="/matched")
      input.input-hidden(type="text" name="matchedImage")
      
    .list
      .user#lilly
        img(src="/images/1.jpg")
        h6 Lilly Singh, 30
      .user#josephine
        img(src="/images/2.jpg")
        h6 Josephine Woods, 22
    .list
      .user#rachel
        img(src="/images/3.jpg")
        h6 Rachel Gray, 21
      .user#ailing
        img(src="/images/4.jpg")
        h6 Ai Ling Lim, 28
    .content-background#lilly-content
      .content
        i.fas.fa-times.close-button
        img(src="/images/1.jpg")
        h6.title Lilly Singh, 30
        h6.job Youtuber
        p I love ice cream and maybe you! Hit me up if you want to do anything fun!
        .interests
